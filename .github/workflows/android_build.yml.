name: Build Android APK

on:
  push:
    branches: [ "main", "master" ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v4

    - name: Set up JDK 17
      uses: actions/setup-java@v4
      with:
        java-version: '17'
        distribution: 'temurin'
        cache: gradle

    - name: Extract Project from ZIP
      run: |
        unzip VirtualAudioCable.zip
        # Move files to root if they are inside a subfolder
        if [ -d "VirtualAudioCable" ]; then
          mv VirtualAudioCable/* .
          rmdir VirtualAudioCable
        fi

    - name: Grant execute permission for gradlew
      run: |
        if [ ! -f "gradlew" ]; then
          gradle init --type basic
          gradle wrapper --gradle-version 8.1.1
        fi
        chmod +x gradlew

    - name: Build with Gradle
      run: ./gradlew assembleDebug

    - name: Upload APK
      uses: actions/upload-artifact@v4
      with:
        name: VirtualAudioCable-Debug
        path: app/build/outputs/apk/debug/app-debug.apk
